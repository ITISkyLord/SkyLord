@using System.Security.Claims
@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using ITI.SkyLord.Models.Entity_Framework

@{
    ViewData["Title"] = "Skylord";
    Layout = "";
    @model ITI.SkyLord.ViewModel.Account.AccountViewModel

    @inject SignInManager<ApplicationUser> SignInManager
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/SkyLord.css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>

<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#game">Le jeu</a></li>
                    <li><a href="#trame">Trame</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/Caroussel/bannière1.jpg" />
            </div>
            <div class="item">
                <img src="~/images/Caroussel/bannière2.jpg" />
            </div>
            <div class="item">
                <img src="~/images/Caroussel/bannière3.jpg" />
            </div>
            <div class="item">
                <img src="~/images/Caroussel/bannière4.jpg" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-home">
        <div class="container">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <!-- Trigger the modal with a button -->
            <br /><br /><br /><center><button type="button" class="btn btn-default btn-lg" id="BtnRegister">Inscription</button></center>

            <!-- Modal -->
            <div class="modal fade" id="ModalRegister" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4><span class="glyphicon glyphicon-lock"></span> Inscription</h4>
                        </div>
                        <div class="modal-body" style="padding:40px 50px;">
                            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                                <div class="form-group">
                                    <label for="usrname"><span class="glyphicon glyphicon-user"></span> Pseudo</label>
                                    <input asp-for="@Model.registerViewModel.Pseudo" class="form-control" />
                                    <span asp-validation-for="@Model.registerViewModel.Pseudo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="mail"><span class="glyphicon glyphicon-eye-open"></span> Email</label>
                                    <input asp-for="@Model.registerViewModel.Email" class="form-control" />
                                    <span asp-validation-for="@Model.registerViewModel.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Mot de passe</label>
                                    <input type="password" asp-for="@Model.registerViewModel.Password" class="form-control" />
                                    <span asp-validation-for="@Model.registerViewModel.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Confirmez votre mot de passe</label>
                                    <input type="password" asp-for="@Model.registerViewModel.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="@Model.registerViewModel.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-default btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Enregistrer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $("#BtnRegister").click(function () {
                        $("#ModalRegister").modal();
                    });
                });
            </script>

            <div class="space-btn">
                <!-- Trigger the modal with a button -->
                <center><button type="button" class="btn btn-default btn-lg" id="BtnLogin">Connexion</button></center>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="ModalLogin" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header" style="padding:35px 50px;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4><span class="glyphicon glyphicon-lock"></span> Connexion</h4>
                        </div>
                        <div class="modal-body" style="padding:40px 50px;">
                            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                                <div class="form-group">
                                    <label for="usrname"><span class="glyphicon glyphicon-user"></span> Mail utilisateur</label>
                                    <input asp-for="@Model.loginViewModel.Email" class="form-control" placeholder="Entrez votre mail" />
                                    <span asp-validation-for="@Model.loginViewModel.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Mot de passe</label>
                                    <input asp-for="@Model.loginViewModel.Password" class="form-control" placeholder="Entrez votre mot de passe" />
                                    <span asp-validation-for="@Model.loginViewModel.Password" class="text-danger"></span>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="" checked>Se souvenir de moi</label>
                                </div>
                                <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Jouer</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Annuler</button>
                            <p>Pas encore un membre ? <a href="#">S'enregistrer</a></p>
                            <p>Oublie de votre <a href="#">mot de passe ?</a></p>
                        </div>
                    </div>

                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $("#BtnLogin").click(function () {
                        $("#ModalLogin").modal();
                    });
                });
            </script>
        </div>

        <div class="background-container">
            <div class="container">
                <h3 class="text-center">TRAME</h3>
                <p class="text-center">
                    Incarnez un puissant mage et partez à la conquète des cieux.<br />
                    Étendez votre empire, entretenez vos alliances, créez des troupes et écrasez vos ennemis.<br />
                    Prenez garde cependant, le monde de SkyLord contient bien des dangers !<br />
                    <br /> Projet visant à démontrer la faisabilité de la mise en production d'un programme utilisant la nouvelle technologie ASP 5 avec DNX.<br /><br />
                </p>

                <div class="patch-notes">
                    <h3>Notes de mise à jour 08/02/2016</h3>
                    <p>
                        Nouveau Contenu
                        <ul>
                            <li>Il est possible de supprimer un bâtiment</li>
                            <li>Ajout d'un classement des joueurs basé sur deux statistiques : Le nombre de victoires (attaque et defense) ainsi que le total de ressources pillées.</li>
                        </ul>
                        Corrections d'erreurs
                        <ul>
                            <li>Une île ne peut plus être pillé si elle ne dispose pas des ressources.</li>
                            <li>Une armée de peut plus être envoyée sans unité</li>
                            <li>On peut envoyer plusieurs transporteurs de ressources en même temps</li>
                            <li>
                                Un transporteur peut désormais envoyer la quantité de ressources indiqués.<br />
                                Par exemple, un transporteur non amélioré peut désormais transporter 30'000 ressources et non 29'999.
                            </li>
                        </ul>
                        Modifications
                        <ul>
                            <li>Nom d'une île limitée à 20 caractères</li>
                            <li>Les messages sont classés dans l'ordre décroissant</li>
                        </ul>
                        Problèmes connus<br />
                        Nous vous indiquerons prochainement les problèmes déjà connus. En attendant, vous pouvez déjà nous envoyer vos retours via notre page <a href="https://www.facebook.com/skylordgame">facebook</a> ou en contactant un membre de l'équipe.
                </div>
            </div>
        </div>

        </p>

    </div>

    <footer class="container-fluid text-center" id="footer-home">
        <ul class="nav nav-pills nav-justified">
            <li><a asp-controller="Home" asp-action="Index">Mentions légales</a></li>
            <li><a asp-controller="Home" asp-action="Index">Support</a></li>
            <li><a asp-controller="Home" asp-action="Index">Version du site</a></li>
            <li><a asp-controller="Home" asp-action="Index">Mentions légales</a></li>
            <li><a href="https://www.facebook.com/skylordgame" target="_blank">Facebook</a></li>
            <li><a href="http://intechinfo.fr" target="_blank">IN'TECH</a></li>
        </ul>
    </footer>
</body>
</html>