@using ITI.SkyLord.ViewModels.Profil;

@model ProfilViewModel
@{
    <div class="profilContainer">
        <div class="container text-center">
            <div class="row">
                @{
                    string avatarImg = "~/images/Avatar/avatar" + Model.OtherIslands.First( i => i.IsCapital).IslandId % 4 + ".jpg";
                }
                <div class="col-sm-2 col-md-2">
                    <img src=@avatarImg id="pp" class="img-rounded img-responsive" alt="Avatar">
                </div>
                <div class="col-sm-8 col-md-8">
                    <blockquote>
                        <cite title="Source Title">@Model.Name</cite>
                    </blockquote>

                    <hr /><label for="mail"> <i class="glyphicon glyphicon-envelope"></i> @Model.Mail</label>
                    <div class="form-group">
                        <hr /><br /><textarea class="form-control" rows="5" id="description" readonly>@Model.Description</textarea><hr />
                    </div>
                    @if( Model.OtherIslands != null )
                    {
                        <div> <h3> Liste d'îles </h3></div>
                        @foreach( Island island in Model.OtherIslands )
                        {
                            <p>
                                <a asp-action="SeeOtherIsland" asp-controller="Island" asp-route-islandId="@Model.Layout.IslandId" asp-route-islandIdOfOtherPlayer="@island.IslandId"> @island.Name [@island.Coordinates.X, @island.Coordinates.Y] </a>
                            </p>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
}