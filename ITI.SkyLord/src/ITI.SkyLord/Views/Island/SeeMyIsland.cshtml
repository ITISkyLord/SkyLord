@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@model ITI.SkyLord.ViewModel.SeeIslands.SeeIslandsViewModel
@using ITI.SkyLord

@{
    ViewData["Title"] = "View Islands";
    Layout = "_Layout";
}

@{ Island currentIsland = Model.Island;}

<h1>Liste d'îles</h1>

<table>
    <tr>
        <th>Ile(s) :</th>
    </tr>
        <tr>
            <td>@currentIsland.Name</td>
            <td>Ses coordonnées sont : [@currentIsland.Coordinates.X;@currentIsland.Coordinates.Y]</td>
            <td><a asp-controller="Ressource" asp-route-islandId="@Model.CurrentIslandId" asp-action="SeeRessources">Voir vos ressources</a></td>
        </tr>
</table>




