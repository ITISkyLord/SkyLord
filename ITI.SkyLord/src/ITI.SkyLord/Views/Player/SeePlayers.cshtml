@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@model ITI.SkyLord.ViewModel.SeePlayers.SeePlayersViewModel
@using ITI.SkyLord

@{
    ViewData["Title"] = "View Players";
    Layout = "_Layout";
}


<div class="seePlayers">
    <center>
        <h1>Liste des joueurs</h1>
    </center>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Joueurs</th>
                <th>Plus d'informations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Player p in Model.Players)
            {
                <tr>
                    <td>@p.Name</td>
                    <td><a asp-action="ProfilOfOtherPlayer" asp-controller="Profil" asp-route-id="@p.PlayerId" asp-route-islandId="@Model.Layout.IslandId">Voir plus d'info</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>