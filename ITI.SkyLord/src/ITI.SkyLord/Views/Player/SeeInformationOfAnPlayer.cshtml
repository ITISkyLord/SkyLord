
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@model ITI.SkyLord.ViewModel.SeePlayers.SeePlayersViewModel
@using ITI.SkyLord

@{
    ViewData["Title"] = "Information sur le joueur";
    Layout = "_Layout";
}

<h1>Joueurs</h1>

<table>
    <tr>
        <th>Nom du joueur</th>
        <th>Email</th>
        <th>Description</th>
        <th>Mot de passe</th>
    </tr>
        <tr>
            <td>@Model.ActivePlayer.Name</td>
            <td>@Model.ActivePlayer.Mail</td>
            <td>@Model.ActivePlayer.Profil.Description</td>
            <td>@Model.ActivePlayer.Password</td>
            @foreach (var island in Model.ActivePlayer.Islands)
            {
                <td> X : @island.Coordinates.X  Y : @island.Coordinates.Y</td>


            }
        </tr>
</table>

<br /><td><a asp-action="SeePlayers" asp-controller="Player">Retour vers la liste des joueurs</a></td>
