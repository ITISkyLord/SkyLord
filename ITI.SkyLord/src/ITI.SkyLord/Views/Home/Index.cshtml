    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-default btn-lg" id="BtnLogin">Connexion</button>

        <!-- Modal -->
        <div class="modal fade" id="ModalLogin" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span> Connexion</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="usrname"><span class="glyphicon glyphicon-user"></span> Utilisateur</label>
                                <input asp-for="@Model.loginViewModel.Email" class="form-control" placeholder="Entrez votre mail" />
                                <span asp-validation-for="@Model.loginViewModel.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Mot de passe</label>
                                <input asp-for="@Model.loginViewModel.Password" class="form-control" placeholder="Entrez votre mot de passe" />
                                <span asp-validation-for="@Model.loginViewModel.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" checked>Se souvenir de moi</label>
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Jouer</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Annuler</button>
                        <p>Pas encore un membre ? <a href="#">S'enregistrer</a></p>
                        <p>Oublie de votre <a href="#">mot de passe ?</a></p>
                    </div>
                </div>

            </div>
        </div>

        <script>
            $(document).ready(function () {
                $("#BtnLogin").click(function () {
                    $("#ModalLogin").modal();
                });
            });
        </script>
