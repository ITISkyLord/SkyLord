@using System.Security.Claims
@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@using ITI.SkyLord.Models.Entity_Framework

@{
    ViewData["Title"] = "Skylord";
    Layout = "";
    @model ITI.SkyLord.ViewModel.Account.AccountViewModel

    @inject SignInManager<ApplicationUser> SignInManager
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/SkyLord.css" />
</head>

<body>

    <div class="container-fluid">
        <nav class="SkyLordNavBar">
            <ul class="navbar">
                <li><img src="~/images/Skylord.png" /></li>
                <li><h1>SkyLord</h1></li>
                <li><a>Le jeu</a></li>
                <li><a>Les règles</a></li>
                <li><a>L'équipe</a></li>
            </ul>
        </nav>


        <div class="HomeContainer">


            <div class="RegisterBlock">
                <h2>Inscription</h2>

                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">

                    <h4>Créer un nouveau joueur</h4>
                    <hr />
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.registerViewModel.Pseudo" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.registerViewModel.Pseudo" class="form-control" />
                            <span asp-validation-for="@Model.registerViewModel.Pseudo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.registerViewModel.Email" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.registerViewModel.Email" class="form-control" />
                            <span asp-validation-for="@Model.registerViewModel.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.registerViewModel.Password" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.registerViewModel.Password" class="form-control" />
                            <span asp-validation-for="@Model.registerViewModel.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.registerViewModel.ConfirmPassword" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.registerViewModel.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="@Model.registerViewModel.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <button type="submit" class="btn btn-default">Enregistrer</button>
                        </div>
                    </div>

                </form>

            </div>

            <div class="ConnectionBlock">
                <h2>Connexion</h2>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                    <hr />

                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.loginViewModel.Email" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="@Model.loginViewModel.Email" class="form-control" />
                            <span asp-validation-for="@Model.loginViewModel.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.loginViewModel.Password" class="col-md-3 control-label"></label>
                        <div class="col-md-9">
                            <input asp-for="@Model.loginViewModel.Password" class="form-control" />
                            <span asp-validation-for="@Model.loginViewModel.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <div class="checkbox">
                                <input asp-for="@Model.loginViewModel.RememberMe" />
                                <label asp-for="@Model.loginViewModel.RememberMe"></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <button type="submit" class="btn btn-default">Log in</button>
                        </div>
                    </div>

                    <p>
                        <a asp-action="ForgotPassword">Mot de passe oublié TODO ?</a>
                    </p>
                </form>

            </div>

        </div>

    </div>

</body>
</html>