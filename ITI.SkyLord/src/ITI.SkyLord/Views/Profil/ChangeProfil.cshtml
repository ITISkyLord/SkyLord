@using ITI.SkyLord.ViewModels.Profil;

@model ProfilViewModel
@{
    <div class="container text-center">
        <div class="row">
            <div class="ccol-sm-2 col-md-2">
                <img src="~/images/SkyLord.png" class="img-rounded img-responsive" alt="Random Name">
            </div>
            <div class="col-sm-4 col-md-4">
                <blockquote>
                    <p>@ViewData["name"]</p> <small><cite title="Source Title">Gotham, United Kingdom  <i class="glyphicon glyphicon-map-marker"></i></cite></small>
                </blockquote>
                <p>
                    <br /> <i class="glyphicon glyphicon-gift"></i> January 30, 1974
                </p>

                <label for="mail"> <i class="glyphicon glyphicon-envelope"></i> @Model.Layout.CurrentPlayer.Mail</label>
                <form asp-controller="Profil" asp-action="changeMail" asp-route-islandId="@Model.Layout.IslandId" role="form" method="post">
                    <input type="text" placeholder="Nouveau mail ..." name="newMail" size="40" />
                    <button class="btn btn-info">Changer mail</button>
                </form>

                <label for="web"> <i class="glyphicon glyphicon-globe"></i> @Model.Layout.CurrentPlayer.Profil.SiteWeb</label>
                <form asp-controller="Profil" asp-action="changeWeb" asp-route-islandId="@Model.Layout.IslandId" role="form" method="post">
                    <input type="text" placeholder="Nouveau site web ..." name="newWeb" size="40" />
                    <button class="btn btn-info">Changer site</button>
                </form>

                <form asp-controller="Profil" asp-action="changeDescription" asp-route-islandId="@Model.Layout.IslandId" role="form" method="post">
                    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="description">Description: @Model.Layout.CurrentPlayer.Profil.Description</label>
                        <textarea asp-for="Description" class="form-control" rows="5">Changer de description ...</textarea>
                        <span asp-validation-for="Description"></span>
                        <button class="btn btn-info">Changer description</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
